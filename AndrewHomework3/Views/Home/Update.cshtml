@{
    ViewBag.Title = "Update Movie";
}

@model MovieModel



<form method="post">
    <br />
    <h6>Update movie information below</h6>
    <br />

    @*Form for movie data*@
    <div class="form-group">
        <label asp-for="Category">Category: </label>
        <input asp-for="Category" />
        <div>@Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })</div>

    </div>

    <div class="form-group">
        <label asp-for="Title">Title: </label>
        <input asp-for="Title" />
        <div>@Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })</div>
    </div>

    <div class="form-group">
        <label asp-for="Year">Year: </label>
        <input asp-for="Year" />
        <div>@Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })</div>

    </div>

    <div class="form-group">
        <label asp-for="Director">Director: </label>
        <input asp-for="Director" />
        <div>@Html.ValidationMessageFor(model => model.Director, "", new { @class = "text-danger" })</div>

    </div>

    <div class="form-group">
        <label asp-for="Rating">Rating: </label>
        <select asp-for="Rating">
            <option value="">Select One</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <div>@Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })</div>

    </div>

    <div class="form-group">
        <label asp-for="Edited">Edited? (Y/N)</label>
        <select asp-for="Edited">
            <option value="">Select One</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="LentTo">Lent To: </label>
        <input asp-for="LentTo" />
    </div>

    <div class="form-group">
        <label asp-for="Notes">Notes: </label>
        <input asp-for="Notes" />
    </div><br />

    <div class="form-group">
        <button class="btn btn-info" type="submit">Submit</button>
    </div>
</form>

